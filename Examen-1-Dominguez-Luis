    <Script type="text/javascript">

    function agregar(com){
        const listname = document.getElementById('list');
        const newName = document.createElement('li');
        newName.textContent= document.getElementById("nombre").value;
        list.appendChild(newName);

        const listnumbreControl = document.getElementById('listNC');
        const newNumC = document.createElement('li');
        newNumC.textContent= document.getElementById("numControl").value;
        listNC.appendChild(newNumC);

        const listPerFav = document.getElementById('listPF');
        const newFavPer = document.createElement('li');
        newFavPer.textContent= document.getElementById("perFavoritos").value;
        listPF.appendChild(newFavPer);
        var peliFavorita = new Array();
        pelifav = peliFavorita.push(PeliFav());
        com=peliFavorita;
    };
    function PeliFav(){
        const listPelFav = document.getElementById('listPLF');
        const newFavPL = document.createElement('li');
        newFavPL.textContent= document.getElementById("pelFavoritos").value;
        listPLF.appendChild(newFavPL);
    };

    function eliminar(){
        listPLF.removeChild(listPLF.children[prompt("Ingrese la pelicula que quiere borrar(las celdas estan contabilisados por numeros iniciando por 0 hasta el maximo de la pelicula que pusiste)")]);
    };
    function combinar(){
        const listPelFavPr = document.getElementById('listPLF');
        const newFavPL = document.createElement('li');
        newFavPL.innerHTML = document.getElementById("listPLF").innerHTML;
        ListPro.appendChild(newFavPL);
    }
    </Script>
